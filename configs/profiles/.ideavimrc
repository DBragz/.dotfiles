"
" Name: .ideavimrc
"
" Author: Daniel Ribeirinha-Braga
"
" Description: Profile IdeaVim file.
"

set ts=2 sts=2 shiftwidth=2
set et
set si
set noeb
set nu
set rnu
set udir
set noswapfile
set undodir=$HOME/.vim/undodir
set undofile
set incsearch

set exrc
set hidden

let mapleader = " "
let maplocalleader = "g"

map <leader>e :E<CR>
map <localleader>e :E<CR>

